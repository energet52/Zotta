# ===========================================
# Zotta Lending Application - Environment Config
# ===========================================

# Database
DATABASE_URL=postgresql+asyncpg://zotta:zotta_secret@localhost:5432/zotta
DATABASE_URL_SYNC=postgresql://zotta:zotta_secret@localhost:5432/zotta
POSTGRES_USER=zotta
POSTGRES_PASSWORD=zotta_secret
POSTGRES_DB=zotta

# Redis
REDIS_URL=redis://localhost:6379/0

# JWT Auth
SECRET_KEY=change-me-to-a-random-secret-key-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=60
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# Credit Bureau
CREDIT_BUREAU_PROVIDER=mock
# AV_KNOWLES_API_URL=https://api.avknowles.com
# AV_KNOWLES_API_KEY=your-api-key

# ID Verification
ID_VERIFICATION_PROVIDER=mock

# Twilio WhatsApp
TWILIO_ACCOUNT_SID=your-twilio-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_WHATSAPP_NUMBER=whatsapp:+14155238886

# OpenAI
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-4o-mini

# File Storage
UPLOAD_DIR=./uploads
MAX_UPLOAD_SIZE_MB=10

# Environment
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO
